<% if @product.reviews.length <= 1 %>
<p><em>No Reviews...</em></p>
<% end %>

<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <% if review.user != nil %>
      <em> by <%= review.user.name %></em>
      Added on: <%= review.created_at %>
      <%= link_to "Edit", edit_product_review_path(@product, review) %> | <%= link_to "Delete", product_review_path(@product, review), :confirm => "Are you sure you want to delete this review?", :method => :delete %>
    <% end %>
  </p>
<% end %>