<h2>Product Detail</h2>

<p>Product ID: <%= @product[:id] %></p>
<p>Product name: <%= @product[:name] %></p>
<p>Description:</p>
<p><%= @product[:description] %></p>
<p>Price: $<%= @product.formatted_price %></p>

<%= link_to "Back", products_path %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %>

