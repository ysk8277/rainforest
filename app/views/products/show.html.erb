<h2>Product Detail</h2>

<p>Product ID: <%= @product[:id] %></p>
<p>Product name: <%= @product[:name] %></p>
<p>Description:</p>
<p><%= @product[:description] %></p>
<p>Price: $<%= @product.formatted_price %></p>

<%= link_to "Home", products_path %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %>

<% if current_user %>

  <h3>Reviews for <%= @product.name %></h3>
  
  <%= render 'products/display_review' %>

  <h4>New Review</h4>

  <%= render 'products/new_review' %>  
        
<% else %>
  
<p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 

<% end %>

